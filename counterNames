<!DOCTYPE html>
<html>
  <head>
    <style>
      body {
        display: flex;
        margin: 0;
        padding: 0;
        height: 100vh;
        background-color: #1e4e70;
        font-family: 'Arial Black', sans-serif;
        color: white;
      }
      .left {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding-left: 20px;
        gap: 15px;
      }
      .counter {
        color: #ffd900;
        font-size: 3vh;
        font-weight: bold;
      }
      .right {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .countdown {
        font-size: 15vh;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="left" id="nameList">
      <!-- 10 counters -->
      <div class="counter" id="counter1">0 Mia</div>
      <div class="counter" id="counter2">0 Bobby</div>
      <div class="counter" id="counter3">0 Ike</div>
      <div class="counter" id="counter4">0 Sam</div>
      <div class="counter" id="counter5">0 Lily</div>
      <div class="counter" id="counter6">0 Alex</div>
      <div class="counter" id="counter7">0 Jane</div>
      <div class="counter" id="counter8">0 Max</div>
      <div class="counter" id="counter9">0 Zoe</div>
      <div class="counter" id="counter10">0 Leo</div>
    </div>
    <div class="right">
      <div class="countdown" id="countdown">20</div>
    </div>

    <script>
      // Get references to counters and countdown
      const counters = [
        { element: document.getElementById('counter1'), name: 'Mia' },
        { element: document.getElementById('counter2'), name: 'Bobby' },
        { element: document.getElementById('counter3'), name: 'Ike' },
        { element: document.getElementById('counter4'), name: 'Sam' },
        { element: document.getElementById('counter5'), name: 'Lily' },
        { element: document.getElementById('counter6'), name: 'Alex' },
        { element: document.getElementById('counter7'), name: 'Jane' },
        { element: document.getElementById('counter8'), name: 'Max' },
        { element: document.getElementById('counter9'), name: 'Zoe' },
        { element: document.getElementById('counter10'), name: 'Leo' },
      ];
      const countdownElement = document.getElementById('countdown');

      // Initialize variables
      let scores = Array(10).fill(0);
      let countdown = 20;
      let countdownInterval = null;

      // Update counters on the screen
      function updateCounters() {
        counters.forEach((counter, index) => {
          counter.element.textContent = `${scores[index]} ${counter.name}`;
        });
      }

      // Start countdown
      function startCountdown() {
        if (countdownInterval) return; // Prevent multiple countdowns
        countdown = 20;
        countdownElement.textContent = countdown;

        countdownInterval = setInterval(() => {
          countdown--;
          countdownElement.textContent = countdown;

          if (countdown <= 0) {
            clearInterval(countdownInterval);
            countdownInterval = null;
          }
        }, 1000); // Decrease every second
      }

      // Reset all scores and countdown
      function resetAll() {
        scores.fill(0);
        countdown = 20;
        countdownElement.textContent = countdown;
        clearInterval(countdownInterval);
        countdownInterval = null;
        updateCounters();
      }

      // Handle keypress to update scores
      document.addEventListener('keypress', (event) => {
        const key = event.key;
        if (key >= '1' && key <= '9') {
          scores[parseInt(key) - 1]++;
        } else if (key === '0') {
          scores[9]++;
        } else if (key.toLowerCase() === 'r') {
          resetAll();
        }
        updateCounters();
      });

      // Handle mouse click to start countdown
      document.addEventListener('click', (event) => {
        if (event.button === 0) {
          // Left mouse button
          startCountdown();
        }
      });

      // Initialize
      updateCounters();
    </script>
  </body>
</html>
