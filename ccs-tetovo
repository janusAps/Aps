<!DOCTYPE html>
<html>
  <head>
    <style>
      body {
        display: flex;
        margin: 0;
        padding: 0;
        height: 100vh;
        background-color: black;
        font-family: 'Arial Black', sans-serif;
        color: white;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        flex-direction: column;
      }
      .countdown-container {
        display: flex;
        justify-content: space-between;
        width: 100%;
        max-width: 1000px; /* Limit width of counters */
        align-items: center;
        gap: 40px; /* Add more space between counters */
      }
      .countdown {
        font-weight: bold;
        margin: 0;
      }
      .middle-counter {
        font-size: 60vh;
        color: yellow;
      }
      .right-counter {
        font-size: 60vh;
        color: red;
      }
      .logo {
        width: 37.5%; /* Reduced logo size to half */
        margin-bottom: 40px; /* Increased margin to push the logo lower */
        object-fit: contain;
        display: block;
        margin-left: auto;
        margin-right: auto;
      }
    </style>
  </head>
  <body>
    <!-- Image horizontally centered above the counters -->
    <img src="https://i.imgur.com/ZR9aYMQ.jpeg" alt="Logo" class="logo" />

    <!-- Countdown container with both counters -->
    <div class="countdown-container">
      <div class="countdown middle-counter" id="leftCounter">16</div>
      <div class="countdown right-counter" id="rightCounter">0</div>
    </div>

    <script>
      // References to counters
      const leftCounterElement = document.getElementById('leftCounter');
      const rightCounterElement = document.getElementById('rightCounter');

      // Initialize values
      let leftCounter = 16;
      let rightCounter = 0;

      // Update counters
      function updateLeftCounter() {
        leftCounterElement.textContent = leftCounter;
      }

      function updateRightCounter() {
        rightCounterElement.textContent = rightCounter;
      }

      // Reset all values
      function resetAll() {
        leftCounter = 16;
        rightCounter = 0;
        updateLeftCounter();
        updateRightCounter();
      }

      // Full-screen toggle
      function toggleFullScreen() {
        if (!document.fullscreenElement) {
          document.documentElement.requestFullscreen();
        } else if (document.exitFullscreen) {
          document.exitFullscreen();
        }
      }

      // Handle mouse clicks for actions
      document.addEventListener('mousedown', (event) => {
        if (event.button === 0) {
          // Left mouse button decreases left counter
          if (leftCounter > 0) {
            leftCounter--;
            updateLeftCounter();
          }
        } else if (event.button === 2) {
          // Right mouse button increases right counter
          rightCounter++;
          updateRightCounter();
        }
      });

      // Handle keypress for actions
      document.addEventListener('keypress', (event) => {
        const key = event.key;
        if (key === 'Enter') {
          toggleFullScreen(); // Full screen with "Enter"
        } else if (key === '0') {
          resetAll(); // Reset all counters with "0"
        }
      });

      // Prevent default context menu on right-click
      document.addEventListener('contextmenu', (event) => {
        event.preventDefault();
      });

      // Initialize counters
      updateLeftCounter();
      updateRightCounter();
    </script>
  </body>
</html>


