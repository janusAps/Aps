<!DOCTYPE html>
<html>
  <head>
    <style>
      .counter {
        margin-bottom: 10px;
      }
    </style>
  </head>
  <body>
    <div class="counter" id="counter1">0</div>
    <div class="counter" id="counter2">0</div>
    <div class="counter" id="counter3">0</div>

    <script>
      // Get references to the counter elements
      const counter1 = document.getElementById('counter1');
      const counter2 = document.getElementById('counter2');
      const counter3 = document.getElementById('counter3');

      // Initialize counters
      let count1 = 0;
      let count2 = 0;
      let count3 = 0;

      // Update counter values and font sizes on the screen
      function updateCounters() {
        const maxWidth = window.innerWidth * 0.9; // Maximum width for the counters
        const fontSize = Math.floor(maxWidth / 8); // Adjust the font size based on the width

        counter1.textContent = count1;
        counter1.style.fontSize = `${fontSize}px`;

        counter2.textContent = count2;
        counter2.style.fontSize = `${fontSize}px`;

        counter3.textContent = count3;
        counter3.style.fontSize = `${fontSize}px`;
      }

      // Increment counters based on keypress
      function handleKeyPress(event) {
        const key = event.key;
        if (key === '1') {
          count1++;
        } else if (key === '2') {
          count2++;
        } else if (key === '3') {
          count3++;
        }

        updateCounters();
      }

      // Attach event listener to the document for keypress events
      document.addEventListener('keypress', handleKeyPress);

      // Call the updateCounters function initially to set the font sizes
      updateCounters();
    </script>
  </body>
</html>
