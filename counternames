<!DOCTYPE html>
<html>
  <head>
    <style>
      body {
        display: flex;
        margin: 0;
        padding: 0;
        height: 100vh;
        background-color: #1e4e70;
        font-family: 'Arial Black', sans-serif;
        color: white;
        overflow: hidden;
      }
      .left {
        width: 33.33%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        padding-left: 20px;
        gap: 1vh;
        overflow-y: auto;
      }
      .counter {
        color: #ffd900;
        font-size: 7vh;
        font-weight: bold;
        line-height: 1.2;
      }
      .center, .right {
        width: 33.33%;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .countdown {
        font-weight: bold;
        margin: 0;
      }
      .middle-counter {
        font-size: 60vh; /* 300% of the previous size (20vh x 3) */
        color: white;
      }
      .right-counter {
        font-size: 20vh;
        color: red;
      }
    </style>
  </head>
  <body>
    <div class="left" id="nameList">
      <div class="counter" id="counter1">0 Chris</div>
      <div class="counter" id="counter2">0 James</div>
      <div class="counter" id="counter3">0 Michael</div>
      <div class="counter" id="counter4">0 Alex</div>
      <div class="counter" id="counter5">0 Jason</div>
      <div class="counter" id="counter6">0 Amber</div>
      <div class="counter" id="counter7">0 Sam</div>
      <div class="counter" id="counter8">0 Rayan</div>
    </div>

    <div class="center">
      <div class="countdown middle-counter" id="middleCountdown">20</div>
    </div>

    <div class="right">
      <div class="countdown right-counter" id="rightCountdown">20</div>
    </div>

    <script>
      // References to counters and countdowns
      const counters = [
        { element: document.getElementById('counter1'), name: 'Chris' },
        { element: document.getElementById('counter2'), name: 'James' },
        { element: document.getElementById('counter3'), name: 'Michael' },
        { element: document.getElementById('counter4'), name: 'Alex' },
        { element: document.getElementById('counter5'), name: 'Jason' },
        { element: document.getElementById('counter6'), name: 'Amber' },
        { element: document.getElementById('counter7'), name: 'Sam' },
        { element: document.getElementById('counter8'), name: 'Rayan' },
      ];
      const middleCountdownElement = document.getElementById('middleCountdown');
      const rightCountdownElement = document.getElementById('rightCountdown');

      // Initialize values
      let scores = Array(8).fill(0);
      let middleCountdown = 20;
      let rightCountdown = 20;

      // Update name counters
      function updateNameCounters() {
        counters.forEach((counter, index) => {
          counter.element.textContent = `${scores[index]} ${counter.name}`;
        });
      }

      // Decrease middle counter
      function decreaseMiddleCounter() {
        if (middleCountdown > 0) {
          middleCountdown--;
          middleCountdownElement.textContent = middleCountdown;
        }
      }

      // Decrease right counter
      function decreaseRightCounter() {
        if (rightCountdown > 0) {
          rightCountdown--;
          rightCountdownElement.textContent = rightCountdown;
        }
      }

      // Reset all values
      function resetAll() {
        scores.fill(0);
        middleCountdown = 20;
        rightCountdown = 20;
        middleCountdownElement.textContent = middleCountdown;
        rightCountdownElement.textContent = rightCountdown;
        updateNameCounters();
      }

      // Handle keypress for name counters and middle counter
      document.addEventListener('keypress', (event) => {
        const key = event.key;
        if (key >= '1' && key <= '8') {
          const index = parseInt(key) - 1;
          scores[index]++;
          updateNameCounters();
          decreaseMiddleCounter(); // Decrease middle counter with keypress
        } else if (key === '0') {
          scores[7]++;
          updateNameCounters();
          decreaseMiddleCounter(); // Decrease middle counter with keypress
        } else if (key.toLowerCase() === 'r') {
          resetAll();
        }
      });

      // Handle mouse clicks
      document.addEventListener('mousedown', (event) => {
        if (event.button === 0) {
          // Left click decreases middle counter
          decreaseMiddleCounter();
        } else if (event.button === 2) {
          // Right click decreases right counter
          decreaseRightCounter();
        }
      });

      // Disable the context menu to prevent the right-click menu from appearing
      document.addEventListener('contextmenu', (event) => {
        event.preventDefault();
      });

      // Initialize counters
      updateNameCounters();
    </script>
  </body>
</html>
